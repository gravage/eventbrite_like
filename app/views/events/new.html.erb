<% provide(:title, 'Sign up') %>
<h1>Events</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@event) do |f| %>

      <%= f.label :date %>
      <%= f.email_field :date %>

            <%= f.label :description %>
      <%= f.email_field :description %>

            <%= f.label :place %>
      <%= f.email_field :place %>

      <%= f.submit "Create An Event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>